package timer

import(
	."fmt"
	."time"
)

var timerSet := false;			//Saves the time when timer is turned on
var startTime := 0;				//Says if the timer is turned on or not


//Sets timer
func setTimer() {
	startTime = Now()			//Sets current time
	timerSet = true
}

//Checks if the timer has gone over 3 seconds
func checkTimer() bool {
	if (timerSet) {
		if(Now() - startTime >= 3) {
			timerSet = false
			return true
		}
	}
	return false
}
